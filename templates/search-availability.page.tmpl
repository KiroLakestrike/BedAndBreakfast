{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1>Booking Page</h1>
            <form action="" method="get" class="needs-validation" novalidate>

                <div class="row g-3">
                    <div class="col">
                        <div class="row" id="reservation-dates">
                            <div class="col">
                                <input class="form-control" type="text" name="start" required placeholder="Enter Start Date">
                            </div>
                            <div class="col">
                                <input class="form-control" type="text" name="end" required placeholder="Enter End Date">
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <button type="Submit" class="btn btn-primary">Search availability</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{end}}

{{define "js"}}
<script>
    const elem = document.getElementById('reservation-dates');
    const rangepicker = new DateRangePicker(elem, {
        format: "yyyy-mm-dd"
    })
</script>
{{end}}