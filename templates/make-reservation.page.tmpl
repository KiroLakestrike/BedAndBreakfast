{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Make Reservation</h1>

            {{$res := index .Data "reservation"}}
            <form action="" method="post" class="" novalidate>
                <div class="form-group mt-5">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">


                    <label for="first_name">First Name:</label>
                    {{with .Form.Errors.Get "first_name"}}
                    <label for="first_name" class="text-danger">{{.}}</label>
                    {{end}}
                    <input type="text" id="first_name" class="form-control {{with .Form.Errors.Get "first_name"}} is-invalid {{end}}" name="first_name" required value="{{$res.FirstName}}" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="last_name">Last Name:</label>
                    {{with .Form.Errors.Get "last_name"}}
                    <label for="last_name" class="text-danger">{{.}}</label>
                    {{end}}
                    <input type="text" id="last_name" class="form-control {{with .Form.Errors.Get "last_name"}} is-invalid {{end}}" name="last_name" required value="{{$res.LastName}}" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="email">E-Mail:</label>
                    {{with .Form.Errors.Get "email"}}
                    <label for="email" class="text-danger">{{.}}</label>
                    {{end}}
                    <input type="email" id="email" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}" name="email" required value="{{$res.Email}}" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number:</label>
                    {{with .Form.Errors.Get "phone"}}
                    <label for="phone" class="text-danger">{{.}}</label>
                    {{end}}
                    <input type="text" id="phone" class="form-control {{with .Form.Errors.Get "phone"}} is-invalid {{end}}" name="phone" required value="{{$res.Phone}}" autocomplete="off">
                </div>
                <hr>
                <input type="submit" class="btn btn-primary" value="Make Reservation">
            </form>
        </div>
    </div>
</div>

{{end}}
